{
  "name": "@cityssm/faster-web-helper",
  "version": "1.0.0-dev",
  "type": "module",
  "description": "A service to support integrations with FASTER Web.",
  "exports": "./app.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./app.js",
    "dev": "cross-env NODE_ENV=dev DEBUG=faster-web-helper:*,faster-report-parser:* nodemon ./app.js",
    "cy:open": "cypress open --config-file cypress.config.ts",
    "cy:run": "cypress run --config-file cypress.config.ts",
    "test": "cross-env NODE_ENV=dev DEBUG=faster-web-helper:*,faster-report-parser:* node --test",
    "coverage": "cross-env NODE_ENV=dev DEBUG=faster-web-helper:*,faster-report-parser:* c8 --reporter=lcov --reporter=text --reporter=text-summary node --test"
  },
  "keywords": [
    "faster-web",
    "worktech",
    "inventory-management"
  ],
  "author": "The Corporation of the City of Sault Ste. Marie",
  "license": "MIT",
  "dependencies": {
    "@cityssm/authentication-helper": "^0.1.0",
    "@cityssm/bulma-js": "^1.0.0-rc",
    "@cityssm/bulma-webapp-js": "^1.5.0",
    "@cityssm/configurator": "^0.1.0",
    "@cityssm/dynamics-gp": "^1.0.5",
    "@cityssm/faster-report-exporter": "^0.3.2",
    "@cityssm/faster-report-parser": "^0.3.0",
    "@cityssm/faster-url-builder": "^1.0.0",
    "@cityssm/has-package": "^1.0.0",
    "@cityssm/is-private-network-address": "^1.0.0",
    "@cityssm/mssql-multi-pool": "^4.1.0",
    "@cityssm/to-millis": "^1.0.0",
    "@cityssm/utils-datetime": "^1.3.0",
    "@cityssm/worktech-api": "^0.5.0",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@types/nodemailer": "^6.4.17",
    "basic-ftp": "^5.0.5",
    "better-sqlite3": "^11.7.0",
    "bulma": "^1.0.2",
    "camelcase": "^8.0.0",
    "cookie-parser": "^1.4.7",
    "debug": "^4.4.0",
    "ejs": "^3.1.10",
    "exit-hook": "^4.0.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.16",
    "session-file-store": "^1.5.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cookie-parser": "^1.4.8",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/node": "^22.10.2",
    "@types/node-schedule": "^2.1.7",
    "@types/session-file-store": "^1.2.5",
    "cypress": "^13.17.0",
    "cypress-axe": "^1.5.0",
    "eslint-config-cityssm": "^18.1.2",
    "nodemon": "^3.1.9",
    "prettier-config-cityssm": "^1.0.0"
  },
  "optionalDependencies": {
    "@cityssm/faster-api": "github:cityssm/node-faster-api"
  },
  "private": true
}
