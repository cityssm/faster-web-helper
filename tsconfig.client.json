{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "isolatedModules": false,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "include": ["public/javascripts/*"],
  "exclude": [
    "bin/*",
    "cypress/*",
    "data/*",
    "database/*",
    "handlers/*",
    "helpers/*",
    "routes/*",
    "temp/*",
    "test/*",
    "types/*"
  ]
}
