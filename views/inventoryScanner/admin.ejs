<%- include('../_header'); -%>

<h1 class="title">Inventory Scanner</h1>

<div class="tabs is-boxed">
  <ul>
    <li class="is-active">
      <a href="#tab--pending">Pending Scanner Records</a>
    </li>
    <li>
      <a href="#tab--inventory">Inventory List</a>
    </li>
  </ul>
</div>
<div class="tab-container">
  <div id="tab--pending">
    pending
  </div>
  <div class="is-hidden" id="tab--inventory">
    <div class="box">
      <div class="columns">
        <div class="column">
          <div class="field has-addons">
            <div class="control has-icons-left">
              <input id="filter--inventory" class="input" type="text" placeholder="Filter items" aria-label="Filter items" />
              <span class="icon is-small is-left">
                <i class="fa-solid fa-filter" aria-hidden="true"></i>
              </span>
            </div>
            <div class="control">
              <span id="displayCount--inventory" class="button is-static"></span>
            </div>
          </div>
        </div>
        <div class="column is-narrow">
          <button id="reload--inventory" class="button is-primary" type="button">
            <span class="icon is-small">
              <i class="fa-solid fa-refresh" aria-hidden="true"></i>
            </span>
            <span>Reload Items</span>
          </button>
        </div>
      </div>
    </div>
    <div id="container--inventory"></div>
  </div>
</div>

<%- include('../_footerA'); -%>

<script>
  exports.inventory = <%- JSON.stringify(inventory) %>;
</script>
<script src="<%= urlPrefix %>/inventoryScanner/javascripts/adminInventory.js"></script>

<%- include('../_footerB'); -%>