<%- include('../_header'); -%>

<h1 class="title">Integrity Checker - WorkTech</h1>

<div class="box">
  <div class="columns">
    <div class="column">
      <div class="field">
        <div class="control has-icons-left">
          <input class="input" type="text" id="includeFilter--integrityChecker" placeholder="Keywords to include" />
          <span class="icon is-small is-left">
            <i class="fa-solid fa-plus" aria-hidden="true"></i>
          </span>
        </div>
      </div>
    </div>
    <div class="column">
      <div class="field">
        <div class="control has-icons-left">
          <input class="input" type="text" id="excludeFilter--integrityChecker" placeholder="Keywords to exclude" />
          <span class="icon is-small is-left">
            <i class="fa-solid fa-minus" aria-hidden="true"></i>
          </span>
        </div>
      </div>
    </div>
    <div class="column is-narrow">
      <button class="button is-primary" id="button--integrityChecker" type="button">Apply Filters</button>
    </div>
  </div>
</div>

<table class="table is-bordered is-fullwidth is-striped is-hoverable is-rowfocused">
  <thead>
    <tr>
      <th>FASTER Web Asset Number</th>
      <th colspan="2">Asset Description</th>
      <th colspan="2">
        <abbr title="Vehicle Identification Number">VIN</abbr> / Serial
      </th>
      <th colspan="2">License Plate</th>
    </tr>
  </thead>
  <tbody id="tbody--integrityChecker"></tbody>
</table>

<%- include('../_footerA'); -%>

<script>
  exports.assetIntegrityRecords = <%- JSON.stringify(assetIntegrityRecords) %>;
</script>
<script src="<%= urlPrefix %>/integrityChecker/javascripts/index.js"></script>

<%- include('../_footerB'); -%>
