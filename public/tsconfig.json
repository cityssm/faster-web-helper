{
  "compilerOptions": {
    "target": "es6",
    "module": "preserve",
    "moduleResolution": "bundler",
    "isolatedModules": false,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "include": ["./*", "./**/*"]
}
